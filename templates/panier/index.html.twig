{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Panier</h1>
    <br/>
    <h2>Mes Produits</h2>
    <br/>

    {% if panier is not empty %}
    {# {{dump(panier)}} #}
         <table class="table" class="container">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Quantité</th>
                    <th>Montant (par rapport à la quantité)</th>
                    <th>Ce produit</th>
                </tr>
            </thead>
            <tbody>
                {% for article in panier %}
                    <tr>
                        <td>{{ article.produit.nom }}</td>
                        <td>{{ article.quantiteco }}</td>
                        <td>{{ (article.produit.prix) * (article.quantiteco) }}€</td>
                        <td>
                            <button  style="background-color:red ; border-radius:5px;">
                                <a href="{{ path('delete_produit_panier', {'id': article.id}) }}" style="color:white; text-decoration:none;" >
                                    Supprimer
                                </a>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table> 
        {% else %} 
        <p>Votre panier est vide</p>
    {% endif %}

    <span style=" background-color:#707173; color:white; font-weight:bold; border-radius:2px;"> {{panier | length}} produit(s) </span>
   
    <br/>
    <br/>
    <br/>
    <br/>

    <h2>Total TTC</h2>
    
    {% set total_panier = 0 %} 
    {% set quantite_panier = 0 %}

        {% for article in panier %}
            
                {% set total_panier = total_panier + (article.produit.prix * article.quantiteco) %}
           
        {% endfor %}

    <p style="font-size:20px;">Le montant du panier s'élève à  <span style="font-weight:bold; font-size: 25px;" >{{ total_panier }}€</span>.</p>

{% endblock %}

